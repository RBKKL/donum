{
  "name": "donum",
  "version": "0.1.0",
  "description": "Donum monorepo",
  "private": true,
  "engines": {
    "npm": ">=8.0.0 <9.0.0",
    "node": ">=18.12.0 <19.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
